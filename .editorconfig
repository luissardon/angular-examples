root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
tab_width = 2

[*.jade]
indent_style = space
indent_size = 2

[{*.styl, *.coffee, *.js, *.config}]
indent_style = tab
indent_size = 2

[*.md]
trim_trailing_whitespace = false
